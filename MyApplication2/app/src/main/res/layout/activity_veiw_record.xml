<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.docinabag.myapplication2.VeiwRecordActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Patient Record"
        android:id="@+id/titleLabel"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Name: "
        android:id="@+id/nameLabel"
        android:layout_below="@id/titleLabel"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView_firstName"
        android:layout_toRightOf="@+id/nameLabel"
        android:layout_alignTop="@id/nameLabel"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Date Of Birth: "
        android:id="@+id/dobLabel"
        android:layout_below="@id/nameLabel"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textViewDOB"
        android:layout_toRightOf="@+id/dobLabel"
        android:layout_alignTop="@id/dobLabel"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Height: "
        android:id="@id/heightLabel"
        android:layout_below="@id/dobLabel"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textViewHeight"
        android:layout_toRightOf="@id/heightLabel"
        android:layout_alignTop="@id/heightLabel"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Weight: "
        android:id="@id/weightLabel"
        android:layout_below="@id/heightLabel"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textViewWeight"
        android:layout_toRightOf="@id/weightLabel"
        android:layout_alignTop="@id/weightLabel"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Blood Pressure: "
        android:id="@id/bloodPressureLabel"
        android:layout_below="@id/weightLabel"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textViewBloodPresure"
        android:layout_toRightOf="@id/bloodPressureLabel"
        android:layout_alignTop="@id/bloodPressureLabel"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Cholesterol: "
        android:id="@id/cholesterolLabel"
        android:layout_below="@id/bloodPressureLabel"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textViewCholesterol"
        android:layout_toRightOf="@id/cholesterolLabel"
        android:layout_alignTop="@id/cholesterolLabel"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Blood Glucose: "
        android:id="@id/glucoseLabel"
        android:layout_below="@id/cholesterolLabel"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textViewGlucose"
        android:layout_toRightOf="@id/glucoseLabel"
        android:layout_alignTop="@id/glucoseLabel"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Pulse: "
        android:id="@+id/pulseLabel"
        android:layout_below="@id/glucoseLabel"
        android:layout_marginTop="10dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textViewPulse"
        android:layout_toRightOf="@id/pulseLabel"
        android:layout_alignTop="@id/pulseLabel"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Begin Testing"
        android:id="@+id/uploadButton"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/pulseLabel"
        android:layout_marginTop="25dp"/>


</RelativeLayout>


