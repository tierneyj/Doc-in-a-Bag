<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.docinabag.myapplication2.CreateNewPatientActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="First Name:"
            android:id="@+id/firstLabel"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/firstNameTextField"
            android:layout_below="@+id/firstLabel"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:width="320dp"
            android:inputType="textCapWords|text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Last Name:"
            android:id="@+id/lastLabel"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/firstNameTextField"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lastNameTextField"
            android:layout_below="@+id/lastLabel"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:width="320dp"
            android:inputType="textCapWords|text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Date Of Birth: (mm/dd/yyyy)"
            android:id="@+id/dobLabel"
            android:layout_below="@+id/lastNameTextField"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="25dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/dayTextField"
            android:width="50dp"
            android:maxLength="2"
            android:textAlignment="center"
            android:layout_below="@+id/dobLabel"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/monthTextField"
            android:width="50dp"
            android:maxLength="2"
            android:textAlignment="center"
            android:layout_below="@+id/dobLabel"
            android:layout_alignRight="@+id/firstLabel"
            android:layout_alignEnd="@+id/firstLabel" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/yeartextFeild"
            android:width="50dp"
            android:maxLength="4"
            android:textAlignment="center"
            android:layout_below="@+id/dobLabel"
            android:layout_alignRight="@+id/lastNameTextField"
            android:layout_alignEnd="@+id/lastNameTextField" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="/"
            android:id="@+id/textView4"
            android:layout_alignBottom="@+id/monthTextField"
            android:layout_toRightOf="@+id/monthTextField"
            android:layout_toEndOf="@+id/monthTextField"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="/"
            android:id="@+id/textView5"
            android:layout_alignBottom="@+id/yeartextFeild"
            android:layout_toRightOf="@+id/dobLabel"
            android:layout_toEndOf="@+id/dobLabel" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Height: (in.)"
            android:id="@+id/heightLabel"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/monthTextField"
            android:layout_marginTop="25dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/heightTextField"
            android:layout_below="@+id/heightLabel"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:width="320dp"
            android:inputType="number|numberDecimal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Weight: (lbs.)"
            android:id="@+id/weightLabel"
            android:layout_below="@+id/heightTextField"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="25dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/weightTextField"
            android:layout_below="@+id/weightLabel"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:width="320dp"
            android:inputType="number|numberDecimal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Sex:"
            android:id="@+id/sexLabel"
            android:layout_below="@+id/weightTextField"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="25dp" />

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/sexLabel"
            android:layout_marginTop="10dp">


            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:id="@+id/femaleRadio"
                android:checked="false"
                android:layout_below="@+id/sexLabel"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:id="@+id/maleRadio"
                android:checked="false"
                android:allowUndo="false"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/weightTextField"
                android:layout_alignEnd="@+id/weightTextField" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create"
                android:id="@+id/createButton"
                android:layout_gravity="center_horizontal"
                android:layout_below="@id/sexLabel" />
        </RadioGroup>

    </RelativeLayout>
</ScrollView>
