<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.docinabag.myapplication2.CreateNewPatientActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="First Name:"
        android:id="@+id/firstLabel"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/firstNameTextField"
        android:layout_below="@+id/firstLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:width="320dp"
        android:inputType="textCapWords|text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Last Name:"
        android:id="@+id/lastLabel"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/firstNameTextField"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lastNameTextField"
        android:layout_below="@+id/lastLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:width="320dp"
        android:inputType="textCapWords|text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Date Of Birth:(mm/dd/yyyy)"
        android:id="@+id/dobLabel"
        android:layout_below="@+id/lastNameTextField"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/dayTextField"
        android:width="50dp"
        android:maxLength="2"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/monthTextField"
        android:width="50dp"
        android:maxLength="2"
        android:textAlignment="center"
        android:layout_alignTop="@+id/dayTextField"
        android:layout_alignRight="@+id/firstLabel"
        android:layout_alignEnd="@+id/firstLabel" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/yeartextFeild"
        android:width="50dp"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp"
        android:maxLength="4"
        android:textAlignment="center"
        android:layout_alignTop="@+id/dayTextField"
        android:layout_alignRight="@+id/lastNameTextField"
        android:layout_alignEnd="@+id/lastNameTextField" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create"
        android:id="@+id/creatPatientButton"
        android:layout_marginTop="58dp"
        android:layout_below="@+id/monthTextField"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="/"
        android:id="@+id/textView4"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/creatPatientButton"
        android:layout_toStartOf="@+id/creatPatientButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="/"
        android:id="@+id/textView5"
        android:layout_alignTop="@+id/textView4"
        android:layout_toRightOf="@+id/creatPatientButton"
        android:layout_toEndOf="@+id/creatPatientButton" />

</RelativeLayout>
